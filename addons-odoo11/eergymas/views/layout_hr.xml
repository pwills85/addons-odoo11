              <div class="col-xs-4" style="height: 180px; top:5px">
	             <t t-if="cedible">
		            <div class="datagrid">
	               <table>
								  <tbody>
									<tr>
										<td style="width:20%; background-color: #E97300;color: white;">
											<strong style="text-align:left; font-size:10px !important;">NOMBRE:</strong>
										</td>
										<td></td>
									</tr>
									<tr>
										<td style="width:20%; background-color: #E97300;color: white;">
											<strong style="text-align:left; font-size:10px !important;">R.U.T.:</strong>
										</td>
										<td></td>
									</tr>
									<tr>
										<td style="width:20%; background-color: #E97300;color: white;">
											<strong style="text-align:left; font-size:10px !important;">FECHA:</strong>
										</td>
										<td></td>
									</tr>
									<tr>
										<td style="width:20%; background-color: #E97300;color: white;">
											<strong style="text-align:left; font-size:10px !important;">RECINTO:</strong>
										</td>
										<td></td>
									</tr>
