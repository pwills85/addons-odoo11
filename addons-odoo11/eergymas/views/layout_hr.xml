              		<h6 class="pull-right">CEDIBLE</h6>
              	</t>
              </div>
       </template>


      <template name="web.external_layout_clean" id="web.external_layout_clean">
        <style>
          .o_clean_header img {
                    max-width: 200px;
                    width: 200px;
          }
          .o_report_layout_clean table thead tr th.prod_descr {
              width: 48% !important;
          }
        </style>
        <div class="header o_clean_header">
            <div class="row">
              <div class="col-xs-3">
                  <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="width: 200px;"/>
              </div>
              <div class="col-xs-7" name="company_address">
